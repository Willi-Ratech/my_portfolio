{% extends 'base.html.twig' %}
{% block title %}Hello DetailController!{% endblock %}

{% block body %}
<!DOCTYPE html>
    <title>Detail Equipment</title>
    <style>
        .container-details {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            max-width: 80%;
            margin: auto;
        }

        .thumbnails {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .thumbnails img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s ease;
        }

        .thumbnails img:hover {
            border-color: #007bff;
        }

        .main-image {
            flex-grow: 1;
        }

        .main-image img {
            width: 400px;
            height: auto;
            object-fit: cover;
            border-radius: 8px;
        }

        .details {
            flex-grow: 1;
        }

        .card-details {
            background-color: #f8f9fa;
            padding: 80px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }



@media screen and (max-width: 768px) {

    .container-details {
            display: block;
            align-items: flex-start;
            gap: 20px;
            max-width: 100%;
           
        
           
        }

        .thumbnails {
            display: block;
            flex-direction: column;
            gap: 20px;
        }

        .thumbnails img {
            width: 20%;
            height:auto;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s ease;

            margin-left: 10px;
          
        }

        .thumbnails img:hover {
            border-color: #007bff;
        }

        .main-image {
            flex-grow: 1;
           
        }

        .main-image img {
            width: 270px;
            height: auto;
         
            object-fit: cover;
            border-radius: 8px;
            align-items: center;
            position: relative;
            left: 10px;
         
         width: 90%;
            margin: 0 auto;
     
        }

        .details {
            flex-grow: 1;
        }

        .card-details {
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 90%;
            margin: 0 auto;
            padding: 0;
           text-align: center;
           
           
        
        }

 }

    </style>
</head>
<body>
    <br><br><br><br>

    <div class="container-details">
        <!-- Miniatures -->
        <div class="thumbnails">
            <img src="{{ equipment.image1 }}" onclick="changeImage('{{ equipment.image1 }}')" alt="Miniature 1">
            <img src="{{ equipment.image2 }}" onclick="changeImage('{{ equipment.image2 }}')" alt="Miniature 2">
            <img src="{{ equipment.image3 }}" onclick="changeImage('{{ equipment.image3 }}')" alt="Miniature 3">
            <img src="{{ equipment.image4 }}" onclick="changeImage('{{ equipment.image4 }}')" alt="Miniature 4">
        </div>

        <!-- Image principale -->
        <div class="main-image">
            <img id="mainImg" src="{{ equipment.image }}" alt="Image principale">
        </div>



        <!-- Détails -->
        <div class="details">
            <div class="card-details">
                <h5>{{ equipment.name }}</h5>
                <p>Prix : {{ equipment.price }} €</p>
                <p>Description : {{ equipment.description }}</p>
            </div>
        </div>
    </div>

    <script>
        function changeImage(imageSrc) {
            document.getElementById('mainImg').src = imageSrc;
        }


    </script>


{% endblock %} 




    



    